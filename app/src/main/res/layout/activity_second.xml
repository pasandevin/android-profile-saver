<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ImageView
        android:id="@+id/imgpuser"
        android:layout_width="38dp"
        android:layout_height="34dp"

        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_user"
        tools:layout_editor_absoluteX="90dp" />

    <TextView
        android:id="@+id/textlabelname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/design_default_color_primary"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/imgpuser"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imgemail"
        android:layout_width="38dp"
        android:layout_height="34dp"


        app:layout_constraintTop_toBottomOf="@+id/imgpuser"
        app:srcCompat="@drawable/img_mail"
        tools:layout_editor_absoluteX="90dp" />

    <TextView
        android:id="@+id/textlabelemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="Email"

        android:textColor="@color/design_default_color_primary"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/imgemail"
        app:layout_constraintTop_toBottomOf="@+id/textlabelname" />

    <ImageView
        android:id="@+id/imgphone"
        android:layout_width="38dp"
        android:layout_height="34dp"

        app:layout_constraintTop_toBottomOf="@+id/imgemail"
        app:srcCompat="@drawable/img_phone"
        tools:layout_editor_absoluteX="83dp" />

    <TextView
        android:id="@+id/textlabelphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="Phone"
        android:textColor="@color/design_default_color_primary"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/imgphone"
        app:layout_constraintTop_toBottomOf="@+id/textlabelemail" />

    <TextView
        android:id="@+id/textlabeladult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Adult?"

        android:textColor="@color/design_default_color_primary"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/imgandroid"
        app:layout_constraintTop_toBottomOf="@+id/textlabelphone" />

    <ImageView
        android:id="@+id/imgandroid"
        android:layout_width="38dp"
        android:layout_height="34dp"

        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imgphone"
        app:srcCompat="@drawable/img_18"
        tools:layout_editor_absoluteX="83dp" />


</androidx.constraintlayout.widget.ConstraintLayout>