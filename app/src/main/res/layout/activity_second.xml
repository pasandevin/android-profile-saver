<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">


    <!--UserName-->
    <ImageView
        android:id="@+id/imgpuser"
        android:layout_width="38dp"
        android:layout_height="34dp"
        app:srcCompat="@drawable/img_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imgemail"
        app:layout_constraintEnd_toStartOf="@+id/textlabelname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/textlabelname" />
    <TextView
        android:id="@+id/textlabelname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/design_default_color_primary"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="57dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgpuser" />


    <!--Email-->
    <ImageView
        android:id="@+id/imgemail"
        android:layout_width="38dp"
        android:layout_height="34dp"
        app:srcCompat="@drawable/img_mail"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="126dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textlabelemail"
        app:layout_constraintTop_toBottomOf="@id/imgpuser" />
    <TextView
        android:id="@+id/textlabelemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/design_default_color_primary"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="133dp"
        app:layout_constraintStart_toEndOf="@id/imgemail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textlabelname" />


    <!--Phone-->
    <ImageView
        android:id="@+id/imgphone"
        android:layout_width="38dp"
        android:layout_height="34dp"
        app:srcCompat="@drawable/img_phone"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="216dp"
        app:layout_constraintTop_toBottomOf="@id/imgemail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textlabelphone"/>
    <TextView
        android:id="@+id/textlabelphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textColor="@color/design_default_color_primary"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="276dp"
        app:layout_constraintStart_toEndOf="@id/imgphone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textlabelemail" />


    <!--isAdultLabel-->
    <ImageView
        android:id="@+id/img18"
        android:layout_width="38dp"
        android:layout_height="34dp"
        app:srcCompat="@drawable/img_18"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="250dp"
        app:layout_constraintTop_toBottomOf="@id/imgphone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textlabeladult" />
    <TextView
        android:id="@+id/textlabeladult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adult?"
        android:textColor="@color/design_default_color_primary"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="266dp"
        app:layout_constraintStart_toEndOf="@id/img18"
        app:layout_constraintTop_toBottomOf="@id/textlabelphone"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>