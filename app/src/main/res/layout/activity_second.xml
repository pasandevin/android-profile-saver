<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ImageView
        android:id="@+id/imgpuser"
        android:layout_width="38dp"
        android:layout_height="34dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imgemail"
        app:layout_constraintEnd_toStartOf="@+id/textlabelname"
        app:layout_constraintStart_toStartOf="parent"


        app:srcCompat="@drawable/img_user" />

    <TextView
        android:id="@+id/textlabelname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/design_default_color_primary"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="57dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textlabelemail"
        app:layout_constraintStart_toEndOf="@+id/imgpuser"
/>

    <ImageView
        android:id="@+id/imgemail"
        android:layout_width="38dp"
        android:layout_height="34dp"


        app:srcCompat="@drawable/img_mail"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="126dp"

        app:layout_constraintTop_toBottomOf="@id/imgpuser"


        />

    <TextView
        android:id="@+id/textlabelemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"

        android:textColor="@color/design_default_color_primary"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="232dp" />

    <ImageView
        android:id="@+id/imgphone"
        android:layout_width="38dp"
        android:layout_height="34dp"

        app:srcCompat="@drawable/img_phone"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="216dp" />

    <TextView
        android:id="@+id/textlabelphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textColor="@color/design_default_color_primary"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="276dp" />

    <TextView
        android:id="@+id/textlabeladult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adult?"

        android:textColor="@color/design_default_color_primary"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="266dp" />

    <ImageView
        android:id="@+id/imgandroid"
        android:layout_width="38dp"
        android:layout_height="34dp"

        app:srcCompat="@drawable/img_18"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="250dp" />


</androidx.constraintlayout.widget.ConstraintLayout>